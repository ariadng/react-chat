{
  "name": "@ariadng/react-chat",
  "version": "0.1.1",
  "description": "A lightweight and fully customizable chat UI library for React.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/styles.css",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test": "jest",
    "clean": "rimraf dist",
    "build:js": "babel src --out-dir dist --copy-files --ignore \"src/**/*.test.js,src/**/*.test.jsx\"",
    "build:css": "sass src/styles.scss dist/styles.css --style compressed",
    "build:types": "tsc --project tsconfig.json",
    "build": "npm run clean && npm run build:js && npm run build:css && npm run build:types"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "babel-jest": "^29.7.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "rimraf": "^6.0.1",
    "sass": "^1.89.1",
    "typescript": "^5.8.3"
  }
}
